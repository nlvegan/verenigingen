{
  "mollie_payment_apis": {
    "create_payment": {
      "request": {
        "type": "object",
        "required": ["amount", "description", "reference_doctype", "reference_docname"],
        "properties": {
          "amount": {
            "type": "object",
            "required": ["value", "currency"],
            "properties": {
              "value": {
                "type": "string",
                "pattern": "^[0-9]+\\.[0-9]{2}$",
                "description": "Amount in decimal format (e.g., '25.00')"
              },
              "currency": {
                "type": "string",
                "pattern": "^[A-Z]{3}$",
                "default": "EUR"
              }
            }
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "reference_doctype": {
            "type": "string",
            "enum": ["Sales Invoice", "Donation", "Event Registration"]
          },
          "reference_docname": {
            "type": "string",
            "pattern": "^[A-Z\\-0-9]+$"
          },
          "payment_method": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["ideal", "creditcard", "bancontact", "sofort", "sepadirectdebit", "paypal", "banktransfer"]
            }
          },
          "redirect_url": {
            "type": "string",
            "format": "uri"
          },
          "webhook_url": {
            "type": "string",
            "format": "uri"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "member_id": { "type": "string" },
              "membership_type": { "type": "string" },
              "chapter": { "type": "string" }
            }
          }
        }
      },
      "response": {
        "type": "object",
        "required": ["success", "payment_id", "checkout_url"],
        "properties": {
          "success": { "type": "boolean" },
          "payment_id": {
            "type": "string",
            "pattern": "^tr_[A-Za-z0-9]+$"
          },
          "checkout_url": {
            "type": "string",
            "format": "uri"
          },
          "status": {
            "type": "string",
            "enum": ["open", "canceled", "pending", "paid", "expired", "failed"]
          },
          "expires_at": {
            "type": "string",
            "format": "date-time"
          },
          "qr_code": {
            "type": "object",
            "properties": {
              "src": { "type": "string", "format": "uri" },
              "data": { "type": "string" }
            }
          }
        }
      }
    },
    "create_subscription": {
      "request": {
        "type": "object",
        "required": ["customer_id", "amount", "interval", "description"],
        "properties": {
          "customer_id": {
            "type": "string",
            "pattern": "^cst_[A-Za-z0-9]+$",
            "description": "Mollie customer ID"
          },
          "amount": {
            "type": "object",
            "required": ["value", "currency"],
            "properties": {
              "value": {
                "type": "string",
                "pattern": "^[0-9]+\\.[0-9]{2}$"
              },
              "currency": {
                "type": "string",
                "pattern": "^[A-Z]{3}$",
                "default": "EUR"
              }
            }
          },
          "interval": {
            "type": "string",
            "pattern": "^[0-9]+ (day|week|month)s?$",
            "examples": ["1 month", "3 months", "1 year"]
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "start_date": {
            "type": "string",
            "format": "date"
          },
          "mandate_id": {
            "type": "string",
            "pattern": "^mdt_[A-Za-z0-9]+$"
          },
          "webhook_url": {
            "type": "string",
            "format": "uri"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "member_id": { "type": "string" },
              "membership_dues_schedule": { "type": "string" }
            }
          }
        }
      },
      "response": {
        "type": "object",
        "required": ["success", "subscription_id", "status"],
        "properties": {
          "success": { "type": "boolean" },
          "subscription_id": {
            "type": "string",
            "pattern": "^sub_[A-Za-z0-9]+$"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "active", "canceled", "suspended", "completed"]
          },
          "custom_next_payment_date": {
            "type": "string",
            "format": "date"
          },
          "canceled_at": {
            "type": ["string", "null"],
            "format": "date-time"
          },
          "times_remaining": {
            "type": ["integer", "null"]
          }
        }
      }
    },
    "webhook_payment": {
      "request": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^(tr_|sub_)[A-Za-z0-9]+$",
            "description": "Mollie payment or subscription ID"
          }
        }
      },
      "response": {
        "type": "object",
        "required": ["success", "processed"],
        "properties": {
          "success": { "type": "boolean" },
          "processed": { "type": "boolean" },
          "payment_entry": { "type": "string" },
          "invoice_updated": { "type": "boolean" },
          "member_history_updated": { "type": "boolean" },
          "error": { "type": "string" }
        }
      }
    },
    "get_balance": {
      "request": {
        "type": "object",
        "properties": {
          "balance_id": {
            "type": "string",
            "default": "primary"
          }
        }
      },
      "response": {
        "type": "object",
        "required": ["success", "balance"],
        "properties": {
          "success": { "type": "boolean" },
          "balance": {
            "type": "object",
            "properties": {
              "available": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "amount": {
                      "type": "object",
                      "properties": {
                        "value": { "type": "string" },
                        "currency": { "type": "string" }
                      }
                    }
                  }
                }
              },
              "pending": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "amount": {
                      "type": "object",
                      "properties": {
                        "value": { "type": "string" },
                        "currency": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "transfer_reference": { "type": "string" },
          "transfer_frequency": { "type": "string" }
        }
      }
    },
    "refund_payment": {
      "request": {
        "type": "object",
        "required": ["payment_id"],
        "properties": {
          "payment_id": {
            "type": "string",
            "pattern": "^tr_[A-Za-z0-9]+$"
          },
          "amount": {
            "type": "object",
            "properties": {
              "value": {
                "type": "string",
                "pattern": "^[0-9]+\\.[0-9]{2}$"
              },
              "currency": {
                "type": "string",
                "pattern": "^[A-Z]{3}$"
              }
            }
          },
          "description": {
            "type": "string",
            "maxLength": 140
          },
          "metadata": {
            "type": "object"
          }
        }
      },
      "response": {
        "type": "object",
        "required": ["success", "refund_id", "status"],
        "properties": {
          "success": { "type": "boolean" },
          "refund_id": {
            "type": "string",
            "pattern": "^re_[A-Za-z0-9]+$"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "processing", "refunded", "failed"]
          },
          "amount": {
            "type": "object",
            "properties": {
              "value": { "type": "string" },
              "currency": { "type": "string" }
            }
          },
          "settlement_amount": {
            "type": "object",
            "properties": {
              "value": { "type": "string" },
              "currency": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "mollie_customer_apis": {
    "create_customer": {
      "request": {
        "type": "object",
        "required": ["name", "email"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "locale": {
            "type": "string",
            "pattern": "^[a-z]{2}_[A-Z]{2}$",
            "default": "nl_NL"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "member_id": { "type": "string" },
              "customer_id": { "type": "string" }
            }
          }
        }
      },
      "response": {
        "type": "object",
        "required": ["success", "customer_id"],
        "properties": {
          "success": { "type": "boolean" },
          "customer_id": {
            "type": "string",
            "pattern": "^cst_[A-Za-z0-9]+$"
          },
          "mode": {
            "type": "string",
            "enum": ["test", "live"]
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "create_mandate": {
      "request": {
        "type": "object",
        "required": ["customer_id", "method", "consumer_account"],
        "properties": {
          "customer_id": {
            "type": "string",
            "pattern": "^cst_[A-Za-z0-9]+$"
          },
          "method": {
            "type": "string",
            "enum": ["directdebit", "creditcard", "paypal"]
          },
          "consumer_account": {
            "type": "string",
            "description": "IBAN for directdebit"
          },
          "consumer_name": {
            "type": "string",
            "maxLength": 255
          },
          "consumer_bic": {
            "type": "string",
            "pattern": "^[A-Z]{6}[A-Z0-9]{2}([A-Z0-9]{3})?$"
          },
          "signature_date": {
            "type": "string",
            "format": "date"
          },
          "mandate_reference": {
            "type": "string",
            "maxLength": 35
          }
        }
      },
      "response": {
        "type": "object",
        "required": ["success", "mandate_id", "status"],
        "properties": {
          "success": { "type": "boolean" },
          "mandate_id": {
            "type": "string",
            "pattern": "^mdt_[A-Za-z0-9]+$"
          },
          "status": {
            "type": "string",
            "enum": ["valid", "pending", "invalid"]
          },
          "method": { "type": "string" },
          "details": {
            "type": "object",
            "properties": {
              "consumer_name": { "type": "string" },
              "consumer_account": { "type": "string" },
              "consumer_bic": { "type": "string" }
            }
          }
        }
      }
    }
  }
}